@model IEnumerable<MVC5.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2></h2>


<div class="row col-lg-3">
    <div class="navbar-left sidebar" role="navigation">
        <div class="navbar-brand">
            Opciones

            <div class="navbar navbar-default">
                <ul class="nav">
                    <li> @Html.ActionLink("Crear nuevo", "Create")</li>
                    <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                    <li>@Html.ActionLink("Expedientes", "Index", "Expediente")</li>
                </ul>
            </div>
        </div>
        <!-- /.sidebar-collapse -->
    </div>
</div>
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Lista de usuarios
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    N° de registro
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Nombre de usuario
                                </th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre_Usuario)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    </div>

