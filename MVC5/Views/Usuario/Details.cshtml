@model MVC5.Models.Usuario

@{
    ViewBag.Title = "Detalles";
}

<h2></h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Detalles del usuario</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label> N° Registro:</label>
                            <input class="form-control" type="text" readonly="" value="@Html.DisplayFor(model => model.Id)">
                        </div>
                        <div class="form-group">
                            <label>Nombre:</label>
                            <input class="form-control" type="text" readonly="" value="@Html.DisplayFor(model => model.Nombre)" />
                            </div>
                        <div class="form-group">
                            <label>Nombre de usuario:</label>
                            <input class="form-control" type="text" readonly="" value="@Html.DisplayFor(model => model.Nombre_Usuario)" />
                        </div>
                        <div class="form-group">
                            <label>Contraseña:</label>
                            <input class="form-control" type="password" readonly="" value="@Html.DisplayFor(model => model.Contrasenna)" />
                        </div>
                            </div>
                    <div class="panel-footer">
                        <center>
                            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" }) 
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
