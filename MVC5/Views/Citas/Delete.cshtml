@model appProyectoFinal.Models.Cita

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Universidad Técnica Nacional", "Dashboard", "Usuarios", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Dashboard", "Usuarios")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    @if (Request.Cookies["userName"] != null)
                    {
                        <li>@Html.ActionLink("Pacientes", "Index", "Pacientes")</li>
                        <li>@Html.ActionLink("Expedientes", "Index", "Expedientes")</li>
                        <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                        <li>@Html.ActionLink("Citas", "Index", "Citas")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        <h3>¿Desea eliminar ésta cita?</h3>
        <hr />
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <center>
                            Eliminar cita
                        </center>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label>N° Registro:</label>
                                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>Paciente:</label>
                                        @Html.EditorFor(model => model.Cedula.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Cedula.Apellidos, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Estado:</label>
                                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha de la cita:</label>
                                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <div class="panel-footer panel-info">
                        <center>
                            <input type="submit" value="Eliminar" class="btn btn-default" />
                            <button class="btn btn-default"> @Html.ActionLink("Regresar", "Index")</button>
                        </center>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    }
</body>
</html>
