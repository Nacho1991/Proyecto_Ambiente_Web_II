@model appProyectoFinal.Models.Expediente

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Universidad Técnica Nacional", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Pacientes", "Index", "Pacientes")</li>
                    <li>@Html.ActionLink("Expedientes", "Index", "Expedientes")</li>
                    <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                    <li>@Html.ActionLink("Citas", "Index", "Citas")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <h3>¿Desea eliminar éste usuario?</h3>
    <hr />
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <center>
                        Eliminar expediente
                    </center>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label>N° Cliente:</label>
                                    @Html.EditorFor(model => model.Cliente.Id, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cliente.Id, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Hemoglobina:</label>
                                    @Html.EditorFor(model => model.Hemoglobina, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Hemoglobina, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>Ácido único:</label>
                                    @Html.EditorFor(model => model.AcidoUnico, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AcidoUnico, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Creatina:</label>
                                    @Html.EditorFor(model => model.Creatina, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Creatina, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Nivel de colesterol:</label>
                                    @Html.EditorFor(model => model.ColesterolTotal, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ColesterolTotal, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Fecha de creación:</label>
                                    @Html.EditorFor(model => model.FechaCreacion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FechaCreacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <div class="panel-footer panel-info">
                    <center>
                        <input type="submit" value="Eliminar" class="btn btn-default" />
                        <button class="btn btn-default"> @Html.ActionLink("Regresar", "Index")</button>
                    </center>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</body>
</html>
