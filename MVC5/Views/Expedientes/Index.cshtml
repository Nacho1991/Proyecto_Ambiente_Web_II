@model IEnumerable<appProyectoFinal.Models.Expediente>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Universidad Técnica Nacional", "Dashboard", "Usuarios", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Dashboard", "Usuarios")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
@if (Request.Cookies["userName"] != null)
                    {
                    <li>@Html.ActionLink("Pacientes", "Index", "Pacientes")</li>
                    <li class="active">@Html.ActionLink("Expedientes", "Index", "Expedientes")</li>
                    <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                    <li>@Html.ActionLink("Citas", "Index", "Citas")</li>
}
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <h1 class="page-header">Expedientes</h1>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lista de expedientes
                    <button class="pull-right">@Html.ActionLink("Registrar", "Create")</button>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        N° Cliente
                                    </th>
                                    <th>
                                        Hemoglobina
                                    </th>
                                    <th>
                                        Acido único
                                    </th>
                                    <th>
                                        Creatina
                                    </th>
                                    <th>
                                        Colesterol total
                                    </th>
                                    <th>
                                        Fecha de creación
                                    </th>
                                    <th>
                                        Opciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null) {
                                    <tr>
                                        <td>
                                            No hay registros
                                        </td>
                                    </tr>
                                }
                                else { 
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Cliente.Cedula)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hemoglobina)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AcidoUnico)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Creatina)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ColesterolTotal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                                        </td>
                                        <td>
                                            <button class="btn btn-default">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                                            <button class="btn btn-default">@Html.ActionLink("Ver detalles", "Details", new { id = item.Id }) </button>
                                            <button class="btn btn-default">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                                        </td>
                                    </tr>
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</body>
</html>
